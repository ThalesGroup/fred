{
  "name": "Fred container",
  "build": {
    "dockerfile": "Dockerfile-devcontainer",
    "context": "..",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "workspaceFolder": "/workspaces/fred",
  "runArgs": ["--init"],
  "mounts": [
    "source=${localEnv:HOME}/.fred,target=/home/vscode/.fred,type=bind,consistency=cached",
    "source=fred-dev-cache,target=/fred-dev-cache,type=volume"
  ],
  "forwardPorts": [5173, 8000, 8111],
  "portsAttributes": {
    "5173": { "label": "frontend (Vite)" },
    "8000": { "label": "agentic backend" },
    "8111": { "label": "knowledge flow backend" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-vscode.vscode-typescript-next",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.linting.enabled": true,
        "python.testing.pytestEnabled": true,
        "python.defaultInterpreterPath": "${workspaceFolder}/agentic_backend/.venv/bin/python"
      }
    }
  },
  "remoteUser": "vscode",
  "overrideCommand": true,
  "updateRemoteUserUID": true,
  // Give permissions to the fred-dev-cache volume
  "postStartCommand": "sudo chown -R $(id -u):$(id -g) /fred-dev-cache"
}
