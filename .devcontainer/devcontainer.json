{
  "name": "Fred container",
  "build": {
    "dockerfile": "Dockerfile-devcontainer",
    "context": "..",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "workspaceFolder": "/workspaces/fred",
  "runArgs": ["--init"],
  "mounts": [
    "source=${localEnv:HOME}/.fred,target=/home/vscode/.fred,type=bind,consistency=cached"
  ],
  "forwardPorts": [5173, 8000, 8111],
  "portsAttributes": {
    "5173": { "label": "frontend (Vite)" },
    "8000": { "label": "agentic backend" },
    "8111": { "label": "knowledge flow backend" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // ---- Backend ----
        // Python support
        "ms-python.python",
        "ms-python.vscode-pylance",
        // Python linter and formatter
        "charliermarsh.ruff",
        // OpenFga .fga file support
        "openfga.openfga-vscode",

        // ---- Frontend ----
        // Typescript support
        "ms-vscode.vscode-typescript-next",
        // Typescript linter
        "dbaeumer.vscode-eslint",
        // Typescript formatter
        "esbenp.prettier-vscode",
        // Help handling internationalization (missing key, quick translation file edit...)
        "lokalise.i18n-ally",
        // Better Typescript error messages
        "YoavBls.pretty-ts-errors",

        // ---- Other ----
        // Handle containers in vscode (docker)
        "ms-azuretools.vscode-containers",
        // Help doing conventional commits
        "vivaxy.vscode-conventional-commits",
        // Git graph visualization
        "mhutchie.git-graph",
        // GitHub PR and issue management
        "GitHub.vscode-pull-request-github"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.linting.enabled": true,
        "python.testing.pytestEnabled": true,
        "python.defaultInterpreterPath": "${workspaceFolder}/agentic_backend/.venv/bin/python"
      }
    }
  },
  "remoteUser": "vscode",
  "overrideCommand": true,
  "updateRemoteUserUID": true
}
