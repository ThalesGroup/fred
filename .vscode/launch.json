{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Agentic Backend",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/agentic_backend",
      "module": "uvicorn",
      "args": [
        "app.main:create_app",
        "--factory",
        "--port",
        "8000",
        "--env-file",
        "config/.env",
        "--log-level",
        "info",
        "--loop",
        "asyncio"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/agentic_backend",
        "CONFIG_FILE": "${workspaceFolder}/agentic_backend/config/configuration.yaml"
      },
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Knowledge Flow Backend",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/knowledge_flow_backend",
      "module": "uvicorn",
      "args": [
        "app.main:create_app",
        "--factory",
        "--port",
        "8111",
        "--env-file",
        "config/.env",
        "--log-level",
        "debug"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/knowledge_flow_backend",
        "CONFIG_FILE": "${workspaceFolder}/knowledge_flow_backend/config/configuration.yaml"
      },
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug all Kknowledge flow tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}/knowledge_flow_backend",
      "args": [
        "-s",
        "-q"
      ],
      "envFile": "config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/knowledge_flow_backend/app",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": false
    },
    {
      "name": "Debug all agentic tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}/agentic_backend",
      "args": [
        "-s",
        "-q"
      ],
      "envFile": "config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/agentic_backend/app",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": false
    },
    {
      "name": "Debug one knowledge flow test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}/knowledge_flow_backend",
      "args": [
        "-s",
        "-vv",
        "app/tests/services/test_output_processor_service.py::TestOutputProcessorService::test_process_real_pdf_success"
      ],
      "justMyCode": false,
      "envFile": "config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/knowledge_flow_backend/app",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug current knowledge flow test file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}/knowledge_flow_backend",
      "args": [
        "-s",
        "-vv",
        "${file}"
      ],
      "envFile": "config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/knowledge_flow_backend/app",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": false
    },
    {
      "name": "Debug current agentic test file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}/agentic_backend",
      "args": [
        "-s",
        "-vv",
        "${file}"
      ],
      "envFile": "config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/agentic_backend/app",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": false
    },
    {
      "name": "Debug Fred Frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}